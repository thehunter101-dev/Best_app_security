{% extends 'base.jinja' %}
{% load static %}
<title>{% block title %}{{ title }}{% endblock %}</title>
{% block styles %}
    <link rel="stylesheet" href="{% static 'styles/home.css' %}" type="text/css" media="screen" />
{% endblock styles %}
{% block content %}
    <div class="min-h-screen bg-gray-900 text-white">
        <main class="container mx-auto px-4 py-8">
            <!-- Header Section -->
            <div class="mb-12 animate-fade-in-up">
                <div class="text-center mb-8">
                    <div class="mb-4">
                        <h2 class="text-4xl font-bold text-white mb-2">
                            ¡Bienvenido a SaludTotal!
                        </h2>
                        <p class="text-xl text-gray-300">Gestiona tus citas y atenciones</p>
                    </div>
                    <div class="w-24 h-1 bg-blue-500 mx-auto mb-4"></div>
                    <div class="flex justify-center">
                        <div
                            class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center animate-pulse-custom"
                        >
                            <svg
                                class="w-8 h-8 text-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                <div
                    class="stats-card bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-blue-500 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/20"
                >
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Total Usuarios</p>
                            <p class="text-3xl font-bold text-white mt-2">1,234</p>
                        </div>
                        <div class="gradient-icon bg-blue-500/20 p-3 rounded-lg">
                            <svg
                                class="w-6 h-6 text-blue-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div
                    class="stats-card bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-green-500 transition-all duration-300 hover:shadow-lg hover:shadow-green-500/20"
                >
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Atenciones Hoy</p>
                            <p class="text-3xl font-bold text-white mt-2">89</p>
                        </div>
                        <div class="gradient-icon bg-green-500/20 p-3 rounded-lg">
                            <svg
                                class="w-6 h-6 text-green-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div
                    class="stats-card bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-500 transition-all duration-300 hover:shadow-lg hover:shadow-yellow-500/20"
                >
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Consultas Pendientes</p>
                            <p class="text-3xl font-bold text-white mt-2">23</p>
                        </div>
                        <div class="gradient-icon bg-yellow-500/20 p-3 rounded-lg">
                            <svg
                                class="w-6 h-6 text-yellow-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <div
                    class="stats-card bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-purple-500 transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/20"
                >
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Mantenimientos</p>
                            <p class="text-3xl font-bold text-white mt-2">5</p>
                        </div>
                        <div class="gradient-icon bg-purple-500/20 p-3 rounded-lg">
                            <svg
                                class="w-6 h-6 text-purple-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Menu Sections -->
            {% if user.is_authenticated %}
                <div class="space-y-8">
                    {% for menu_item in menu_list %}
                        <div
                            class=" section-card bg-gray-800 rounded-xl border border-gray-700 overflow-hidden animate-slide-in-right delay-{{ forloop.counter }}00"
                        >
                            <div class="p-6 border-b border-gray-700">
                                <div class="flex items-center space-x-4">
                                    {% if menu_item.menu.icon %}
                                        <div
                                            class="gradient-icon w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center"
                                        >
                                            <i
                                                class="{{ menu_item.menu.icon }} text-white text-xl"
                                            ></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <h2 class="text-2xl font-bold text-white">
                                            {{ menu_item.menu.name }}
                                        </h2>
                                        {% if menu_item.menu.description %}
                                            <p class="text-gray-400 mt-1">
                                                {{ menu_item.menu.description }}
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                    {% for module_permission in menu_item.group_module_permission_list %}
                                        <a
                                            href="{% if module_permission.module.url %}{{ module_permission.module.url }}{% else %}#{% endif %}"
                                            class="module-card group bg-gray-700 rounded-lg p-6 border border-gray-600 hover:border-blue-500 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/20 hover:bg-gray-600"
                                            onclick="createRipple(event, this)"
                                        >
                                            <div class="flex items-center space-x-4 mb-4">
                                                <div
                                                    class="gradient-icon w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center group-hover:bg-blue-500/30 transition-colors"
                                                >
                                                    {% if module_permission.module.icon %}
                                                        <i
                                                            class="{{ module_permission.module.icon }} text-blue-400 text-lg"
                                                        ></i>
                                                    {% else %}
                                                        <i
                                                            class="fas fa-cube text-blue-400 text-lg"
                                                        ></i>
                                                    {% endif %}
                                                </div>
                                                <h3
                                                    class="text-lg font-semibold text-white group-hover:text-blue-300 transition-colors"
                                                >
                                                    {{ module_permission.module.name }}
                                                </h3>
                                            </div>
                                            <p class="text-gray-400 text-sm mb-4 leading-relaxed">
                                                {% if module_permission.module.description %}
                                                    {{ module_permission.module.description }}
                                                {% else %}
                                                    Accede a las funcionalidades de
                                                    {{ module_permission.module.name|lower }}.
                                                {% endif %}
                                            </p>
                                            <div class="flex items-center justify-between">
                                                <div
                                                    class="text-blue-400 font-medium text-sm group-hover:text-blue-300 transition-colors"
                                                >
                                                    Acceder
                                                </div>
                                                <svg
                                                    class="w-4 h-4 text-blue-400 group-hover:text-blue-300 group-hover:translate-x-1 transition-all"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M9 5l7 7-7 7"
                                                    ></path>
                                                </svg>
                                            </div>
                                        </a>
                                        {% empty %}
                                        <div class="col-span-full">
                                            <div
                                                class="bg-gray-700 rounded-lg p-8 text-center border border-gray-600 animate-fade-in-up"
                                            >
                                                <svg
                                                    class="w-12 h-12 text-gray-500 mx-auto mb-4"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
                                                    ></path>
                                                </svg>
                                                <div class="text-gray-400">
                                                    No hay módulos disponibles en este menú
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        {% empty %}
                        <div
                            class="bg-gray-800 rounded-xl p-12 text-center border border-gray-700 animate-fade-in-up"
                        >
                            <svg
                                class="w-16 h-16 text-gray-500 mx-auto mb-6"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.29-1.009-5.824-2.562M15 6.306a7.962 7.962 0 00-6 0m6 0V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2.306"
                                ></path>
                            </svg>
                            <div class="text-xl text-gray-400">
                                No hay módulos disponibles para este grupo
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div
                    class="bg-gray-800 rounded-xl p-12 text-center border border-gray-700 animate-fade-in-up"
                >
                    <svg
                        class="w-16 h-16 text-gray-500 mx-auto mb-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                        ></path>
                    </svg>
                    <div class="text-xl text-gray-400 mb-4">
                        Debes iniciar sesión para acceder a los módulos
                    </div>
                    <a
                        href="/login"
                        class="ripple-container inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
                        onclick="createRipple(event, this)"
                    >
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                            ></path>
                        </svg>
                        Iniciar Sesión
                    </a>
                </div>
            {% endif %}
        </main>
    </div>
{% endblock content %}

{% block scripts %}
    <script type="text/javascript" src="{% static 'scripts/home.js' %}"></script>
{% endblock scripts %}
