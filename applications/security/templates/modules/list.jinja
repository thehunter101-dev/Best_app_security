{% extends 'home.jinja' %}
<title>{% block title %}{{ title }}{% endblock %}</title>
{% block content %}
    {% load static %}
    {% include 'fragments/messages.jinja' %}
<section class="min-h-screen bg-gray-900 py-8">
    <div class="container mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="inline-block">
                <h1 class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-3 rounded-xl text-3xl font-bold uppercase shadow-lg">
                    {{ title1 }}
                </h1>
            </div>
        </div>

        <!-- Main Content Card -->
        <div class="bg-gray-800 rounded-2xl border border-gray-700 shadow-2xl overflow-hidden">

            <!-- Search Bar -->
            <div class="p-6 border-b border-gray-700">
                <div class="flex justify-center">
                    <div class="relative w-full max-w-md">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <form method="GET">
                            <input
                                type="text"
                                name="q"
                                id="table-search"
                                class="w-full pl-10 pr-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300"
                                placeholder="Búsqueda sin límites"
                                value="{{ request.GET.q }}"
                            />
                        </form>
                    </div>
                </div>
            </div>

            <!-- Table Container -->
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead class="bg-gray-700 border-b border-gray-600">
                        <tr>
                            <th scope="col" class="px-4 py-4 text-left font-semibold text-blue-300 uppercase tracking-wider">ID</th>
                            <th scope="col" class="px-4 py-4 text-center font-semibold text-blue-300 uppercase tracking-wider">Icono</th>
                            <th scope="col" class="px-4 py-4 text-left font-semibold text-blue-300 uppercase tracking-wider">Nombre</th>
                            <th scope="col" class="px-4 py-4 text-left font-semibold text-blue-300 uppercase tracking-wider">URL</th>
                            <th scope="col" class="px-4 py-4 text-left font-semibold text-blue-300 uppercase tracking-wider">Menú</th>
                            <th scope="col" class="px-4 py-4 text-left font-semibold text-blue-300 uppercase tracking-wider">Descripción</th>
                            <th scope="col" class="px-4 py-4 text-center font-semibold text-blue-300 uppercase tracking-wider">Orden</th>
                            <th scope="col" class="px-4 py-4 text-center font-semibold text-blue-300 uppercase tracking-wider">Estado</th>
                            <th scope="col" class="px-4 py-4 text-center font-semibold text-blue-300 uppercase tracking-wider">Permisos</th>
                            <th scope="col" class="px-4 py-4 text-center font-semibold text-blue-300 uppercase tracking-wider">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        {% for item in modules %}
                            <tr class="bg-gray-800 hover:bg-gray-700 transition-colors duration-200">
                                <td class="px-4 py-4 text-gray-300 font-medium">{{ item.id }}</td>
                                <td class="px-4 py-4 text-center">
                                    <div class="flex justify-center">
                                        <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
                                            <i class="{{ item.icon }} text-xl text-blue-400"></i>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-4 text-white font-semibold">{{ item.name }}</td>
                                <td class="px-4 py-4">
                                    <code class="bg-gray-700 border border-gray-600 text-green-300 px-3 py-1 rounded-md text-xs font-mono">
                                        {{ item.url }}
                                    </code>
                                </td>
                                <td class="px-4 py-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-900/30 text-purple-300 border border-purple-700">
                                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                        </svg>
                                        {{ item.menu.name }}
                                    </span>
                                </td>
                                <td class="px-4 py-4 text-gray-300 max-w-xs">
                                    {% if item.description %}
                                        <div class="truncate" title="{{ item.description }}">
                                            {{ item.description|truncatechars:40 }}
                                        </div>
                                    {% else %}
                                        <span class="text-gray-500 italic text-sm">Sin descripción</span>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-4 text-center">
                                    <span class="inline-flex items-center justify-center w-8 h-8 bg-gray-700 border border-gray-600 rounded-full text-sm font-medium text-gray-300">
                                        {{ item.order }}
                                    </span>
                                </td>
                                <td class="px-4 py-4 text-center">
                                    {% if item.is_active %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-900/30 text-green-300 border border-green-700">
                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            Activo
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-900/30 text-red-300 border border-red-700">
                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                            Inactivo
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-4 text-center">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-900/30 text-blue-300 border border-blue-700">
                                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                        </svg>
                                        {{ item.permissions.count }} permisos
                                    </span>
                                </td>
                                <td class="px-4 py-4">
                                    <div class="flex items-center justify-center space-x-2">
                                        {% if permissions.change_module %}
                                            <a
                                                href="{% url 'security:module_update' item.id %}"
                                                class="p-2 text-gray-400 hover:text-yellow-400 hover:bg-yellow-900/20 rounded-lg transition-all duration-200"
                                                title="Editar Módulo"
                                            >
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                            </a>
                                        {% endif %}
                                        {% if permissions.delete_module %}
                                            <button
                                                class="p-2 text-gray-400 hover:text-red-400 hover:bg-red-900/20 rounded-lg transition-all duration-200"
                                                title="Eliminar Módulo"
                                                onclick="openDeleteModal('{{ item.id }}', '{{ item.name }}')"
                                            >
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% empty %}
                            <tr>
                                <td colspan="10" class="px-6 py-12 text-center">
                                    <div class="flex flex-col items-center justify-center">
                                        <svg class="w-12 h-12 text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                        </svg>
                                        <p class="text-gray-400 text-lg font-medium">No se encontraron módulos</p>
                                        <p class="text-gray-500 text-sm mt-1">Intenta ajustar los filtros de búsqueda</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if page_obj.has_other_pages %}
                <div class="px-6 py-4 border-t border-gray-700">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-400">
                            Mostrando {{ page_obj.start_index }} - {{ page_obj.end_index }} de {{ page_obj.paginator.count }} resultados
                        </div>
                        <nav class="flex items-center space-x-1">
                            {% if page_obj.has_previous %}
                                <a
                                    href="?page=1{% if request.GET.q %}&q={{ request.GET.q }}{% endif %}"
                                    class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-700 border border-gray-600 rounded-l-lg hover:bg-gray-600 hover:text-white transition-colors duration-200"
                                >
                                    Primera
                                </a>
                                <a
                                    href="?page={{ page_obj.previous_page_number }}{% if request.GET.q %}&q={{ request.GET.q }}{% endif %}"
                                    class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-700 border-t border-b border-gray-600 hover:bg-gray-600 hover:text-white transition-colors duration-200"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                    </svg>
                                </a>
                            {% endif %}

                            {% for num in page_obj.paginator.page_range %}
                                {% if page_obj.number == num %}
                                    <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600">
                                        {{ num }}
                                    </span>
                                {% elif num > page_obj.number|add:'-3' and num < page_obj.number|add:'3' %}
                                    <a
                                        href="?page={{ num }}{% if request.GET.q %}&q={{ request.GET.q }}{% endif %}"
                                        class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-700 border-t border-b border-gray-600 hover:bg-gray-600 hover:text-white transition-colors duration-200"
                                    >
                                        {{ num }}
                                    </a>
                                {% endif %}
                            {% endfor %}

                            {% if page_obj.has_next %}
                                <a
                                    href="?page={{ page_obj.next_page_number }}{% if request.GET.q %}&q={{ request.GET.q }}{% endif %}"
                                    class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-700 border-t border-b border-gray-600 hover:bg-gray-600 hover:text-white transition-colors duration-200"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                                <a
                                    href="?page={{ page_obj.paginator.num_pages }}{% if request.GET.q %}&q={{ request.GET.q }}{% endif %}"
                                    class="px-3 py-2 text-sm font-medium text-gray-400 bg-gray-700 border border-gray-600 rounded-r-lg hover:bg-gray-600 hover:text-white transition-colors duration-200"
                                >
                                    Última
                                </a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
            {% endif %}

            <!-- Action Buttons -->
            <div class="px-6 py-4 border-t border-gray-700 bg-gray-750">
                <div class="flex flex-col sm:flex-row justify-center items-center space-y-3 sm:space-y-0 sm:space-x-4">
                    {% if permissions.add_module %}
                        <a
                            href="{% url 'security:module_create' %}"
                            class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform"
                        >
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Nuevo Módulo
                        </a>
                    {% endif %}
                    <a
                        href="{% url 'home' %}"
                        class="inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform"
                    >
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

    {% include 'fragments/delete.jinja' %}

    <script type="text/javascript">
        const deleteUrlBase = "{% url 'security:module_delete' 0 %}".replace(/0\/?$/, '')
    </script>
    <script type="text/javascript" src="{% static 'scripts/sindex.js' %}"></script>
{% endblock %}
