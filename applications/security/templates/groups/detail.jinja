{% extends 'home.jinja' %}
<title>{% block title %}{{ title1|default:"Detalle del Grupo" }}{% endblock %}</title>
{% load static %}

{% block content %}
    {% include 'fragments/messages.html' %}
    <section class="dark:bg-principal mt-2">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <div class="sm:pt-8 lg:pt-4">
                <h1 class="rounded-2xl bg-indigo-500 px-2 py-1 text-white uppercase text-4xl">
                    {{ title1|default:"Detalle del Grupo" }}
                </h1>
                <h2 class="text-2xl dark:text-gray-300 mt-2">{{ group.name }}</h2>
            </div>

            <div class="lg:p-2 rounded-3xl max-w-5xl mx-auto" data-aos="fade-up" data-aos-delay="200">

                <!-- Sección de Usuarios del Grupo -->
                <div class="bg-white dark:bg-secundario rounded-xl shadow-lg p-6 my-6">
                    <h3 class="text-xl font-semibold dark:text-blue-300 mb-4">Usuarios en este Grupo ({{ users_in_group.count }})</h3>
                    {% if users_in_group %}
                        <ul class="list-disc list-inside text-left dark:text-gray-300 space-y-1">
                            {% for user in users_in_group %}
                                <li>{{ user.get_full_name }} ({{ user.username }})</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="dark:text-gray-400">No hay usuarios asignados a este grupo.</p>
                    {% endif %}
                </div>

                <!-- Sección de Permisos de Módulos del Grupo -->
                <div class="bg-white dark:bg-secundario rounded-xl shadow-lg p-6 my-6">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-xl font-semibold dark:text-blue-300">Permisos de Módulos para {{ group.name }}</h3>
                        <a href="{{ group_module_permissions_url }}" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg flex items-center justify-center transition-colors duration-300 text-sm">
                            <i class="fa-solid fa-shield-alt mr-2"></i>Gestionar Permisos de Módulos
                        </a>
                    </div>
                    <p class="dark:text-gray-400">
                        Haga clic en "Gestionar Permisos de Módulos" para ver, agregar, editar o eliminar los módulos y permisos específicos asignados a este grupo.
                    </p>
                    {# Optionally, you could list some summary here if needed, but the main management is via the link #}
                </div>


                <!-- Botones de acción -->
                <div class="flex flex-col md:flex-row justify-center items-center mt-8 space-y-3 md:space-y-0 md:space-x-8">
                     {% if permissions.change_group %}
                    <a href="{% url 'security:group_update' group.pk %}" class="w-full md:w-auto bg-blue-700 hover:bg-blue-800 text-white py-3 px-8 rounded-lg flex items-center justify-center transition-all duration-300 font-medium shadow-lg hover:shadow-xl">
                        <i class="fa-solid fa-edit mr-2"></i>Editar Grupo
                    </a>
                    {% endif %}
                    <a href="{{ back_url }}" class="w-full md:w-auto bg-gray-600 hover:bg-gray-700 text-white py-3 px-8 rounded-lg flex items-center justify-center transition-all duration-300 font-medium shadow-lg hover:shadow-xl">
                        <i class="fa-solid fa-arrow-left mr-2"></i>Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    {# Add any specific JS for this detail page if needed #}
{% endblock scripts %}
